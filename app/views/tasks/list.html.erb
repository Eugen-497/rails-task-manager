<div class="container">
<h1>My tasks</h1>
<ol class="list-group list-group-numbered">
  <% @tasks.each do |task|  %>

    <li class="list-group-item" >
    <input class="form-check-input me-1" type="checkbox" value="" id="firstCheckbox">
    <label class="form-check-label" for="firstCheckbox"><%= link_to task.title, task_path(task) %></label>
  </li>
  <%= link_to "Delete",
  tasks_path(@task),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
  <%end%>
</ol>
<div class="container-add">
<br>
<button class="btn btn-secondary btn-lg" type="submit"><%= link_to 'Add a new task', new_path %></button>
</div>
</div>
